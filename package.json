{
  "name": "@pikas-ui/monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "build:storybook": "turbo run build --filter=@pikas-ui/storybook...",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev --parallel",
    "dev:packages": "turbo run dev --parallel --filter=./packages/*",
    "dev:storybook": "turbo run dev --parallel --filter=@pikas-ui/storybook...",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "pre-lint": "turbo run pre-lint",
    "changeset": "changeset",
    "changeset:version": "changeset version -r && pnpm i",
    "changeset:release": "pnpm build:packages && changeset publish"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "turbo": "^1.3.1"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.3.0",
  "dependencies": {
    "@changesets/cli": "^2.22.0"
  }
}
